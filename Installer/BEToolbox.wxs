           <!--Curvel -->
           <?define CurvelToolCLSID={90DA3F11-67D6-45D8-9469-CCA6278021AD}?>
           <RegistryKey ForceCreateOnInstall="yes"
                        ForceDeleteOnUninstall="yes"
