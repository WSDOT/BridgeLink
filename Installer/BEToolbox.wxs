           <!--PGStable -->
           <?define PGStableToolCLSID={876DBB2E-ECF9-4439-8F8F-E09A486018DF}?>
           <RegistryKey ForceCreateOnInstall="yes"
                        ForceDeleteOnUninstall="yes"
                        Root="HKCR"
